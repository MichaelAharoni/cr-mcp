{
  "name": "cr-mcp",
  "version": "1.0.2",
  "description": "Code Review Model Context Protocol (CR-MCP) server for managing GitHub pull request comments",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "type": "commonjs",
  "bin": {
    "cr-mcp": "./dist/mcp-server.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "start": "nodemon",
    "prepare": "npm run build",
    "postinstall": "chmod +x ./dist/mcp-server.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "code-review",
    "github",
    "pull-request",
    "comments",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Michael Aharoni",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelAharoni/cr-mcp"
  },
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@types/yargs": "^17.0.33",
    "axios": "^1.8.1",
    "body-parser": "^1.20.3",
    "cheerio": "^1.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "nodemon": "^3.1.9",
    "url": "^0.11.4",
    "yargs": "^17.7.2",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
